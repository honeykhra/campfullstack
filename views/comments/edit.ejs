<%- include("../partials/header") %>

<div style="width:50%; margin: 30px auto;">
    <h1 class="display-4">
        Edit comment
    </h1>
</div>

<div style="width:30%; margin: 30px auto;">

    <form action="/campgrounds/<%=campgroundid%>/comments/<%= comment.id %>?_method=PUT" method="POST">
        <!-- <div class="form-group">
            <input type="text" name="comment[author]" class="form-control" placeholder="Author name">
        </div> -->
        <div class="form-group">
            <input type="text" name="comment[text]" value="<%= comment.text %>" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
    <a href="/campgrounds">Go back</a>

    <%- include("../partials/footer") %>


</div>