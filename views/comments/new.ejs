<%- include("../partials/header") %>
<link rel="stylesheet" href="/stylesheets/login.css" />
<main>
  <div class="quote-container">
    <h1 class="display-4">Add new comment to <%= campground.name %></h1>

    <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
      <!-- <div class="form-group">
            <input type="text" name="comment[author]" class="form-control" placeholder="Author name">
        </div> -->
      <div class="form-group">
        <input
          id="input"
          type="text"
          name="comment[text]"
          placeholder="Comment"
          class="form-control"
        />
      </div>

      <button type="submit" class="btn btn-block signbtn">Submit</button>
      <a class="btn btn-block" href="/campgrounds">Go back</a>
    </form>

    <%- include("../partials/footer") %>
  </div>
</main>
