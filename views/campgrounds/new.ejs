<%- include("../partials/header") %>
<link rel="stylesheet" href="/stylesheets/login.css" />
<main>
  <div class="quote-container">
    <h1 class="display-4">Create a new campground</h1>
    <form action="/campgrounds" method="POST">
      <div class="form-group">
        <input
          id="input"
          type="text"
          name="name"
          class="form-control"
          placeholder="Enter name"
        />
      </div>
      <div class="form-group">
        <input
          id="input"
          type="text"
          name="image"
          placeholder="image url"
          class="form-control"
        />
      </div>
      <div class="form-group">
        <input
          id="input"
          type="text"
          name="description"
          class="form-control"
          placeholder="description"
        />
      </div>
      <button type="submit" class="btn btn-block loginbtn">Submit</button>
      <a href="/campgrounds" class="btn btn-block">Go back</a>
    </form>

    <%- include("../partials/footer") %>
  </div>
</main>
