<%- include("../partials/header") %>
<link rel="stylesheet" href="/stylesheets/login.css" />
<main>
  <div class="quote-container">
    <h1 class="display-4">Edit <%- campground.name %></h1>

    <form
      action="/campgrounds/<%- campground._id %>/?_method=PUT"
      method="POST"
    >
      <div class="form-group">
        <input
          id="input"
          type="text"
          name="campground[name]"
          class="form-control"
          value="<%= campground.name %>"
        />
      </div>
      <div class="form-group">
        <input
          id="input"
          type="text"
          name="campground[image]"
          value="<%= campground.image %>"
          class="form-control"
        />
      </div>
      <div class="form-group">
        <input
          id="input"
          type="text"
          name="campground[description]"
          class="form-control"
          value="<%= campground.description %>"
        />
      </div>
      <button type="submit" class="btn btn-block signbtn">Submit</button>
      <a href="/campgrounds" class="btn btn-block">Go back</a>
    </form>

    <%- include("../partials/footer") %>
  </div>
</main>
