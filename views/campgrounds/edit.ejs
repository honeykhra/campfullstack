<%- include("../partials/header") %>

<div style="width:50%; margin: 30px auto;">
    <h1 class="display-4">
        Edit <%- campground.name %>
    </h1>
</div>

<div style="width:30%; margin: 30px auto;">

    <form action="/campgrounds/<%- campground._id %>/?_method=PUT" method="POST">
        <div class="form-group">
            <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>">
        </div>
        <div class="form-group">
            <input type="text" name="campground[image]" value="<%= campground.image %>" class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="campground[description]" class="form-control"
                value="<%= campground.description %>">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
    <a href="/campgrounds">Go back</a>

    <%- include("../partials/footer") %>


</div>